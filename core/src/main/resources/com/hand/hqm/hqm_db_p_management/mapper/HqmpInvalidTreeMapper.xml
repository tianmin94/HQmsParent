<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hqm.hqm_db_p_management.mapper.HqmpInvalidTreeMapper">
    <resultMap id="BaseResultMap" type="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree">
        <result column="INVALID_ID" property="invalidId" jdbcType="DECIMAL" />
        <result column="PARENT_INVALID_ID" property="parentInvalidId" jdbcType="DECIMAL" />
        <result column="RANKS" property="ranks" jdbcType="DECIMAL" />
        <result column="INVALID_NAME" property="invalidName" jdbcType="VARCHAR" />
        <result column="INVALID_CONSEQUENCE" property="invalidConsequence" jdbcType="VARCHAR" />
        <result column="SERIOUS" property="serious" jdbcType="DECIMAL" />
        <result column="SPECIAL_CHARACTER_TYPE" property="specialCharacterType" jdbcType="VARCHAR" />
        <result column="INVALID_REASON" property="invalidReason" jdbcType="VARCHAR" />
        <result column="PREVENT_MEASURE" property="preventMeasure" jdbcType="VARCHAR" />
        <result column="DETECT_MEASURE" property="detectMeasure" jdbcType="VARCHAR" />
        <result column="OCCURRENCE" property="occurrence" jdbcType="DECIMAL" />
        <result column="DETECTION" property="detection" jdbcType="DECIMAL" />
        <result column="RPN" property="rpn" jdbcType="DECIMAL" />
        <result column="FUNCTION_NAME" property="functionName" jdbcType="VARCHAR" />
        <result column="STRUCTURE_NAME" property="structureName" jdbcType="VARCHAR" />
        <result column="RANGE_NAME" property="rangeName" jdbcType="VARCHAR" />
    </resultMap>

    <select id="selectParentInvalid" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultMap="BaseResultMap">
        SELECT
		    hi.* 
        FROM
            HQM_P_INVALID hi
        WHERE
            hi.parent_invalid_id IS NULL
            <if test="invalidName != null and invalidName != ''">
                and hi.invalid_name like concat('%',concat(#{invalidName,jdbcType=VARCHAR},'%'))
            </if>
            order by hi.invalid_id desc
    </select>
    
    <select id="selectInvalidByParent" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultMap="BaseResultMap">
        SELECT
		    hi.*
        FROM
            HQM_P_INVALID hi
        WHERE
            hi.parent_invalid_id =#{parentInvalidId}
            order by hi.invalid_id desc
    </select>
    
    
    <select id="checkStructure" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultType="Integer">
        SELECT
		    count(*)
        FROM
            HQM_P_INVALID hi
        WHERE
            hi.invalid_name =#{invalidName} 
            and hi.parent_invalid_id IS NULL
    </select>
    
    <select id="checkFunctionAndInvalid" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultType="Integer">
        SELECT
		    count(*)
        FROM
            HQM_P_INVALID hi
        WHERE
            hi.invalid_name =#{invalidName}
            and hi.parent_invalid_id = #{parentInvalidId}
    </select> 
    
     <select id="selectParentInlov" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultMap="BaseResultMap">
        SELECT
		    hi.invalid_id,
		    hi.invalid_name
        FROM
            HQM_P_INVALID hi
        WHERE
            hi.parent_invalid_id IS NULL
            <if test="invalidName != null and invalidName != ''">  
                and hi.invalid_name like concat('%',concat(#{invalidName,jdbcType=VARCHAR},'%')) 
            </if>
    </select>
    
    
     <select id="selectfromdata_r1" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultMap="BaseResultMap">       
    SELECT t.*
	FROM hqm_p_invalid t
 WHERE 1=1
 and  t.invalid_id = #{invalidId} 
 and  t.ranks =1   
	 </select>
	 
	 <select id="selectfromdata_r2r3" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultMap="BaseResultMap">       

SELECT t1.*
	FROM hqm_p_invalid t1
 WHERE 1=1
 and t1.parent_invalid_id = #{invalidId} 
UNION ALL
SELECT t2.*
	FROM hqm_p_invalid t2, hqm_p_invalid t3
 WHERE 1=1
 and t2.parent_invalid_id = t3.invalid_id
	 AND t3.parent_invalid_id = #{invalidId} 
	 </select> 
<select id="getparentIdfromthd" parameterType="com.hand.hqm.hqm_db_p_management.dto.HQMPInvalidTree" resultType="Long">  
	 		SELECT hd.branch_id
			FROM hqm_pfmea_detail hd, hqm_p_invalid hi, hqm_p_invalid hi2
		 WHERE hi.parent_invalid_id = hi2.invalid_id
			 AND hi2.invalid_name = hd.branch_name
			 AND hd.parent_branch_id =#{parentInvalidId}
			 AND hi.invalid_id =#{invalidId} 
 </select>	 
    
</mapper>